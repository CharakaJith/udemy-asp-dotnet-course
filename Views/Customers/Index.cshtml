@model List<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @* page heading *@
    <div style="text-align: center">
        <h1 style="font-weight: bold">Customers</h1>
    </div>
    
    @* page content *@
    <div style="text-align: center; margin-top: 20px">
        @if (Model.Count == 0)
        {
            <h4 style="color: darkgray">We don't have any customers yet.</h4>
        }
        else
        {
            <table class="table table-bordered table-striped" style="margin: 0 auto; width: 60%">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>News Letter</th>
                        <th>Membership Type</th>
                        <th>Discount Rate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>
                                <a asp-area="" asp-controller="Customers" asp-route-id="@customer.CustomerId" asp-action="Details">
                                    <span class="hover-pointer-underline">@customer.Name</span>
                                </a>
                            </td>
                            <td>@(customer.IsSubscribedToNewsLetter ? "Subscribed" : "Not Subscribed")</td>
                            <td>@customer.MembershipType?.Name</td>
                            <td>@customer.MembershipType?.DiscountRate %</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>    
</div>